set nocompatible
set number

set backspace=2
set encoding=utf-8
set tabstop=8
set softtabstop=8
set shiftwidth=8
set noexpandtab

filetype plugin indent on
syn on se title

execute pathogen#infect()
call pathogen#helptags()


